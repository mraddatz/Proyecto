<div class='row'>
  <div class='col-md-12'>
    <%= form_for([@forum, @post], :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class='col-sm-8'>
          <%= form.text_field :name, id: :post_name, class: "form-control", placeholder: "Title of post", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= form.label :text %>
        </div>
        <div class='col-sm-8'>
          <%= form.text_area :text, id: :post_text, rows: 10, class: "form-control", placeholder: "Write your post", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= form.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

