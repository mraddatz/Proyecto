<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@forum, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <% if forum.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(forum.errors.count, "error") %> prohibited this forum from being saved:</h2>

          <ul>
          <% forum.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class='col-sm-8'>
          <%= form.text_field :name, id: :forum_name, class: "form-control", placeholder: "Forum name", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>
        <div class='col-sm-8'>
          <%= form.text_area :description, id: :forum_description, rows: 6, class: "form-control", placeholder: "Forum description", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= form.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
